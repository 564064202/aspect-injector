<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Target Name="AfterCompile">
    <AspectInjectorBuildTask Assembly="$(AssemblyName)" References="@(ReferencePath)" OutputPath="obj\Debug\" />
    <Exec Condition="'$(SignAssembly)' == 'true'" Command="&quot;$(registry:HKEY_LOCAL_MACHINE\SOFTWARE\Microsoft\Microsoft SDKs\Windows\v8.0A\WinSDK-NetFx40Tools-x86@InstallationFolder)sn.exe&quot; -R obj\Debug\$(AssemblyName).exe $(AssemblyOriginatorKeyFile)" />
  </Target>
</Project>